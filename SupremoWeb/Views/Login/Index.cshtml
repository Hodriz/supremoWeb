@model SupremoWeb.Models.LoginModel

@using Microsoft.AspNetCore.Http;

<partial name="_Notification" />

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-background">
    <div class="login-container">
        <div class="login-card">
            <div class="system-title">SupremoWeb</div>
            <div class="login-header">
                <img class="icon" src="~/img/icone-conta.png" alt="Conta Icon">
                <h3 class="title">CONTA</h3>
            </div>
            <form class="login-form" asp-controller="Login" asp-action="Autenticacao" method="post" novalidate>
                <div class="form-group">
                    <label class="label" asp-for="login">Usuário:</label>
                    <input class="form-control input" asp-for="login" name="login" placeholder="Usuário" required>
                    <span class="text-danger" asp-validation-for="login"></span>
                </div>

                <div class="form-group">
                    <label class="label" asp-for="password">Senha:</label>
                    <input class="form-control input" type="password" asp-for="password" placeholder="Senha" required>
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>

                <button type="submit" class="btn btn-primary button" style="margin-top:20px;">Acessar</button>
                <p class="validation">@ViewBag.Validacao</p>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-background {
        width: 100%;
        height: 100%;
        background: url('/img/fundo.jpg') no-repeat center center fixed;
        background-size: cover; /* Ajuste para cobrir toda a tela */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        display: flex;
        background: rgba(255, 255, 255, 0.9); /* slightly transparent */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 400px; /* Reduced width for smaller form */
        width: 100%;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .login-card {
        width: 100%;
    }

    .login-header {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .icon {
        width: 80px;
        margin-bottom: 20px;
    }

    .title {
        margin: 0;
        font-size: 24px;
        color: #333;
    }

    .login-form {
        margin-top: 30px;
        width: 100%;
    }

    .label {
        font-size: 14px;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    .input {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px; /* Reduced margin to bring the error message closer */
        border: 1px solid #ddd;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 14px;
    }

        .input:focus {
            border-color: #007bff;
            outline: none;
        }

    .button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
    }

        .button:hover {
            background: #0056b3;
        }

    .validation {
        margin: 15px 0;
        color: #e12118;
        font-size: 14px;
        text-align: center;
        display: none;
    }

    .system-title {
        font-size: 36px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .text-danger {
        color: #e12118;
        font-size: 12px;
        margin-top: -10px; /* Reduced margin to bring the error message closer */
        display: block;
    }
</style>

<script>
    (function () {
        'use strict';

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.login-form')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
