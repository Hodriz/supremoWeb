@model ClienteModel

@{
    ViewBag.Title = "Incluir Cliente";
}

<h2>Adicionando Cliente</h2>

<form class="row g-3" asp-controller="Cliente" asp-action="Incluir" method="post">
    <div class="col-md-6">
        <label for="companyName" class="form-label">Razão</label>
        <input type="text" class="form-control form-control-sm" id="companyName" name="companyName" required>
    </div>
    <div class="col-md-6">
        <label for="tradingName" class="form-label">Fantasia</label>
        <input type="text" class="form-control form-control-sm" id="tradingName" name="tradingName" required>
    </div>

    <div class="col-6">
        <label for="street" class="form-label">Endereço</label>
        <input type="text" class="form-control form-control-sm" id="street" name="street">
    </div>
    <div class="col-2">
        <label for="houseNumber" class="form-label">Número</label>
        <input type="text" class="form-control form-control-sm" id="houseNumber" name="houseNumber">
    </div>
    <div class="col-4">
        <label for="complement" class="form-label">Complemento</label>
        <input type="text" class="form-control form-control-sm" id="complement" name="complement">
    </div>

    <div class="col-md-4">
        <label for="inputState" class="form-label">País</label>
        <select id="inputState" class="form-select">
            <option selected>Choose...</option>
            <option>...</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="inputState" class="form-label">UF</label>
        <select id="inputState" class="form-select">
            <option selected>Choose...</option>
            <option>...</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="inputState" class="form-label">Cidade</label>
        <select id="inputState" class="form-select">
            <option selected>Choose...</option>
            <option>...</option>
        </select>
    </div>

    <div class="col-md-4">
        <label for="inputState" class="form-label">CEP</label>
        <select id="inputState" class="form-select">
            <option selected>Choose...</option>
            <option>...</option>
        </select>
    </div>
    <div class="col-4">
        <label for="taxPayerNumber" class="form-label">CPF</label>
        <input type="text" class="form-control form-control-sm" id="taxPayerNumber" name="taxPayerNumber">
    </div>
    <div class="col-4">
        <label for="identificationCard" class="form-label">RG</label>
        <input type="text" class="form-control form-control-sm" id="identificationCard" name="identificationCard">
    </div>

    <div class="col-md-6">
        <label for="phone" class="form-label">Telefone</label>
        <input type="text" class="form-control form-control-sm" id="phone" name="phone">
    </div>
    <div class="col-md-6">
        <label for="cellphone" class="form-label">Celular</label>
        <input type="text" class="form-control form-control-sm" id="cellphone" name="cellphone">
    </div>

    <div class="col-md-6">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control form-control-sm" id="email" name="email">
    </div>
    <div class="col-md-6">
        <label for="website" class="form-label">Site</label>
        <input type="text" class="form-control form-control-sm" id="website" name="website">
    </div>


    <div class="col-2">
        <button type="submit" class="btn btn-outline-success">Gravar</button>
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-outline-danger">Cancelar</button>
    </div>

</form> 