    <div class="card mt-1">
        <div class="card-header">Filtrado por</div>
        <div class="card-body">

            <form class="row g-3" id="formIncluirCliente">
                <div class="col-md-1">
                    <label for="Empresa" class="form-label">Empresa</label>
                    <input type="text" class="form-control form-control-sm" id="Empresa">
                </div>
                <div class="col-md-4">
                    <label for="Cliente" class="form-label">Cliente</label>
                    <input type="text" class="form-control form-control-sm" id="Cliente">
                </div>
                <div class="col-md-4">
                    <label for="Razao" class="form-label">Razão</label>
                    <input type="text" class="form-control form-control-sm" id="Razao">
                </div>
                <div class="col-md-3">
                    <label for="Fantasia" class="form-label">Fantasia</label>
                    <input type="text" class="form-control form-control-sm" id="Fantasia">
                </div>

                <div class="col-md-1">
                    <label for="Endereco" class="form-label">Endereço</label>
                    <input type="text" class="form-control form-control-sm" id="Endereco">
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">Bairro</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4">
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">Cidade</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4">
                </div>
                <div class="col-md-3">
                    <label for="inputState" class="form-label">UF</label>
                    <select id="inputState" class="form-select form-select-sm">
                        <option selected>Escolha...</option>
                        @foreach (var estado in ViewBag.EstadosBrasileiros as List<SelectListItem>)
                        {
                            <option value="@estado.Value">@estado.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="inputPassword4" class="form-label">CPF/CNPJ</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4">
                </div>

                <div class="col-md-4">
                    <label for="inputEmail4" class="form-label">RG/I.E</label>
                    <input type="text" class="form-control form-control-sm" id="inputEmail4">
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">Vendedor</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4">
                </div>
                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label">Telefone</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4" v-mask="'########'">
                </div>

                <div class="col-md-3">
                    <label for="inputEmail4" class="form-label">Ramo</label>
                    <input type="text" class="form-control form-control-sm" id="inputEmail4">
                </div>
                <div class="col-md-3">
                    <label for="inputPassword4" class="form-label">Setor Comercial</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4">
                </div>
                <div class="col-md-3">
                    <label for="inputState" class="form-label">Atuação</label>
                    <select id="inputState" class="form-select form-select-sm">
                        <option selected>Escolha...</option>
                        @foreach (var atuacao in ViewBag.Atuacao as List<SelectListItem>)
                        {
                            <option value="@atuacao.Value">@atuacao.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="inputPassword4" class="form-label">Rota</label>
                    <input type="text" class="form-control form-control-sm" id="inputPassword4">
                </div>
            </form>


        </div>
    </div>

</div>

<table id="clientesTable" class="table table-sm">
    <thead class="table-floating-header">
        <tr>
            <th scope="col">Ação</th>
            <th scope="col">Empresa</th>
            <th scope="col">Código</th>
            <th scope="col">Razão</th>
            <th scope="col">Fantasia</th>
            <th scope="col">CPF/CNPJ</th>
            <th scope="col">RG/Insc. Estadual</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in ViewBag.Clientes)
        {
            <tr>
                <td>
                    <div align="center" style="white-space: nowrap;">
                        <a href="@Url.Action("Procurar", "Clientes", new { id =@cliente.id })" title="Procurar"><i class="fas fa-search"></i></a>
                        <a href="@Url.Action("IncluirCliente", "Clientes", new { uid = @cliente.uid })" title="Editar"><i class="fa fa-pencil-alt"></i></a>
                        <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@cliente.id" data-name="@cliente.companyName" title="Excluir"><i class="fa fa-trash-alt"></i></button>
                    </div>
                </td>
                <td>@cliente.companyId</td>
                <td>@cliente.id</td>
                <td>@cliente.companyName</td>
                <td>@cliente.tradingName</td>
                <td>@cliente.taxPayerId</td>
                <td>@cliente.identificationCard</td>
            </tr>
        }
    </tbody>
</table>

<!-- Validação de campos -->
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

<!-- Tela modal para a opcao de exclusão de cliente -->
<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var clientId = button.getAttribute('data-id');
        var clientName = button.getAttribute('data-name');

        var modalTitle = deleteModal.querySelector('.modal-title');
        var modalBody = deleteModal.querySelector('.modal-body #clientName');
        var clientIdInput = deleteModal.querySelector('.modal-footer #clientId');
        var deleteForm = deleteModal.querySelector('.modal-footer #deleteForm');

        modalTitle.textContent = 'Excluir Cliente: ' + clientName;
        modalBody.textContent = clientName;
        clientIdInput.value = clientId;
        deleteForm.action = '@Url.Action("ExcluirCliente", "Clientes")';
    });
</script>
